<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="fontFamily"> @font/gilroy_extra_bold </item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> @dimen/d_24ssp </item>
        <item name="android:gravity"> center </item>
        <item name="android:paddingStart">@dimen/d_10sdp</item>
        <item name="android:paddingEnd">@dimen/d_10sdp</item>
        <item name="android:paddingTop">@dimen/d_24sdp</item>
        <item name="android:paddingBottom">@dimen/d_24sdp</item>
    </style>

    <style name="ItemTextAppearance">
        <item name="fontFamily"> @font/gilroy_extra_bold </item>
        <item name="android:textColor"> @color/black </item>
        <item name="android:textSize"> @dimen/d_14ssp </item>
    </style>

    <style name="ItemTextAppearanceSmall">
        <item name="fontFamily"> @font/gilroy_light </item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:paddingStart">@dimen/d_8sdp</item>
    </style>

</resources>