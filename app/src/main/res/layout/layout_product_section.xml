<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sectionHeading"
            style="@style/ItemTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_16sdp"
            android:paddingLeft="@dimen/d_16sdp"
            android:paddingRight="@dimen/d_16sdp"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sectionRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="false"
            android:paddingLeft="@dimen/d_8sdp"
            android:paddingRight="@dimen/d_8sdp"
            android:paddingBottom="@dimen/d_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/sectionHeading"
            app:nestedScrollingEnabled="@{true}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>